<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- measuring distances with ARCore -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- for Sceneform -->
    <uses-feature android:glEsVersion="0x00030001" android:required="true" />

    <uses-feature android:name="android.hardware.screen.portrait" />
    <uses-feature android:name="android.hardware.camera.ar" android:required="false" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StreetMeasure"
        tools:targetApi="33">
        <meta-data android:name="com.google.ar.core" android:value="required" />
        
        <!-- Splash Screen Activity -->
        <activity
            android:name="de.westnordost.streetmeasure.SplashActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:theme="@style/Theme.StreetMeasure"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Home Activity -->
        <activity
            android:name="de.westnordost.streetmeasure.HomeActivity"
            android:label="@string/app_name"
            android:exported="false">
        </activity>
        
        <!-- Disclaimer Activity -->
        <activity
            android:name="de.westnordost.streetmeasure.DisclaimerActivity"
            android:exported="false"
            android:theme="@style/Theme.StreetMeasure" />
        
        <activity
            android:name="de.westnordost.streetmeasure.MeasureActivity"
            android:label="Measure Project Area"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.TileSampleMeasureActivity"
            android:label="Measure Tile Sample"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.ResultSummaryActivity"
            android:exported="false">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.TileCalculatorActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.SettingsActivity"
            android:exported="false"
            android:parentActivityName="de.westnordost.streetmeasure.HomeActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.SavedProjectsActivity"
            android:exported="false"
            android:parentActivityName="de.westnordost.streetmeasure.HomeActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.SavedTileSamplesActivity"
            android:exported="false"
            android:parentActivityName="de.westnordost.streetmeasure.HomeActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.ProjectDetailActivity"
            android:exported="false"
            android:parentActivityName="de.westnordost.streetmeasure.SavedProjectsActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.TileSampleDetailActivity"
            android:exported="false"
            android:parentActivityName="de.westnordost.streetmeasure.SavedTileSamplesActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.MeasurementSavedActivity"
            android:exported="false"
            android:parentActivityName="de.westnordost.streetmeasure.MeasureActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.TileSampleSavedActivity"
            android:exported="false"
            android:parentActivityName="de.westnordost.streetmeasure.TileSampleMeasureActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.SavedSummariesActivity"
            android:exported="false"
            android:parentActivityName="de.westnordost.streetmeasure.HomeActivity">
        </activity>
        
        <activity
            android:name="de.westnordost.streetmeasure.ProjectSummaryDetailActivity"
            android:exported="false"
            android:parentActivityName="de.westnordost.streetmeasure.SavedSummariesActivity">
        </activity>

        <!-- FileProvider for sharing PDFs -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths_export" />
        </provider>

    </application>

</manifest>