<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Headlines -->
    <style name="HeadlineLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Section Titles -->
    <style name="SectionTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Body Text -->
    <style name="BodyPrimary">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="BodySecondary">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Stat Numbers -->
    <style name="StatNumber">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/accent_teal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/bg_primary_dark</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>
