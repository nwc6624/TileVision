<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/bg_primary"
                android:endColor="@color/bg_primary"
                android:angle="270"/>
        </shape>
    </item>
    
    <!-- Border frame -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke 
                android:width="1dp" 
                android:color="@color/border_soft"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Accent teal border for glow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke 
                android:width="1dp" 
                android:color="@color/accent_teal"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
