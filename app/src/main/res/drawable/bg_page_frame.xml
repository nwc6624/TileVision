<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded edges all around the screen -->
    <corners android:radius="20dp" />

    <!-- Slight translucent fill so the outline reads on both light/dark backgrounds.
         You can tune this later for themes. -->
    <solid android:color="#1A0A0A0F" />
    <!-- 1A = ~10% opacity dark overlay. Change if needed. -->

    <!-- Teal outline stroke: this is the "fun border" -->
            <stroke
                android:width="1dp"
        android:color="@color/accent_teal" />
        <!-- accent_teal is #22E0B8 - the neon teal glow -->
        </shape>
