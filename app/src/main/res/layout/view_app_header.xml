<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headerRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <!-- Status bar spacer -->
    <View
        android:id="@+id/statusBarSpacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title (centered) -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center"
        android:textAlignment="center"
        android:alpha="0.95"
        android:paddingHorizontal="48dp"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpacer"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintBottom_toTopOf="@id/headerSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle (centered, below title) -->
    <TextView
        android:id="@+id/headerSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"
        android:alpha="0.85"
        android:paddingHorizontal="48dp"
        app:layout_constraintTop_toBottomOf="@id/headerTitle"
        app:layout_constraintTop_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Action button (right-aligned) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/headerActionButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="8dp"
        android:alpha="0.85"
        app:iconGravity="textStart"
        app:iconTint="@color/text_secondary"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@id/statusBarSpacer"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
