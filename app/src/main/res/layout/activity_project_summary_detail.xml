<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

    <!-- App Header -->
    <de.westnordost.streetmeasure.AppHeaderView
        android:id="@+id/appHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingBottom="80dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Main GlassCard -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="@color/bg_surface_glass"
                app:strokeColor="@color/border_soft"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section: Project -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Project"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Measured Area:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/areaValueText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="142.8 ft²"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Layout Style:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/layoutValueText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Staggered"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grout Gap:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/groutValueText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1/8 in"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="24dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_soft"
                        android:layout_marginBottom="24dp" />

                    <!-- Section: Tile -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tile"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tile Size:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/tileSizeValueText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12.0 in × 24.0 in"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tile Coverage:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/tileCoverageValueText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.0 ft² per tile"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="24dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_soft"
                        android:layout_marginBottom="24dp" />

                    <!-- Section: Calculation -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calculation"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Raw Tiles:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/rawTilesValueText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="71.4 tiles (before waste)"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waste:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/wasteValueText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10%"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Tiles:"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/totalTilesValueText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="79 tiles (rounded)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent_teal"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:id="@+id/boxesNeededContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="24dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Boxes Needed:"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />
                        <TextView
                            android:id="@+id/boxesNeededValueText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8.5 boxes"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_soft"
                        android:layout_marginBottom="24dp" />

                    <!-- Section: Notes -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/notesValueText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Buttons -->
            <Button
                android:id="@+id/buttonShareText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share Job Summary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/bg_primary_dark"
                android:background="@drawable/button_primary_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:contentDescription="Share this job summary as text" />

            <Button
                android:id="@+id/buttonExportPdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Export / Share PDF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/bg_primary_dark"
                android:background="@drawable/button_primary_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:contentDescription="Export this job as a PDF document" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Job"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/button_secondary_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/buttonOpenCalculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open in Calculator"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Open this job in the tile calculator to make changes" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
