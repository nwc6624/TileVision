<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust Tile Size"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/tv_text_primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Width Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Width (in)"
        android:textSize="14sp"
        android:textColor="@color/tv_text_primary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@android:color/transparent"
        android:textColor="@color/tv_text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Height Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Height (in)"
        android:textSize="14sp"
        android:textColor="@color/tv_text_primary"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/editHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="0.0"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@android:color/transparent"
        android:textColor="@color/tv_text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Buttons -->
    <Button
        android:id="@+id/buttonSnapCommonSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snap to Common Size"
        android:textSize="14sp"
        android:textColor="@color/tv_text_primary"
        android:background="@color/tv_primary"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/tv_text_primary"
            android:background="@android:color/transparent"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/buttonApply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply"
            android:textColor="@color/tv_primaryText"
            android:background="@color/tv_primary" />

    </LinearLayout>

</LinearLayout>
