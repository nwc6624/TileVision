<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/measurementScreenshotRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#666">

    <!-- AR Scene View -->
    <FrameLayout
        android:id="@+id/arSceneViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Hand Motion View -->
    <de.westnordost.streetmeasure.HandMotionView
        android:id="@+id/handMotionView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"/>

    <!-- Instruction Popup -->
    <de.westnordost.streetmeasure.InstructionPopupView
        android:id="@+id/instructionPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="visible"
        android:contentDescription="Measurement instructions" />

    <!-- Top instruction label -->
    <TextView
        android:id="@+id/instructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/ar_tracking_error_background"
        android:padding="16dp"
        android:text="Tap each corner to outline the area"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

    <!-- Floating area bubble (positioned dynamically) -->
    <FrameLayout
        android:id="@+id/areaBubbleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/speech_bubble_bottom_center"
            android:padding="12dp">

            <TextView
                android:id="@+id/areaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area: -- sq ft"
                android:textColor="#2D5A4A"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Area: 12.5 sq ft" />

        </FrameLayout>

    </FrameLayout>

    <!-- Glass Bottom Panel -->
    <LinearLayout
        android:id="@+id/bottomControlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:elevation="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/bg_surface_glass"
            app:strokeColor="@color/border_soft"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Result Text -->
                <TextView
                    android:id="@+id/resultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="142.8 sq ft"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_teal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Undo Button -->
                    <ImageButton
                        android:id="@+id/undoButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/glow_button_undo"
                        android:src="@drawable/ic_start_over_48"
                        android:scaleType="centerInside"
                        android:contentDescription="Undo"
                        android:elevation="8dp"
                        app:tint="@android:color/white" />

                    <!-- Save Button -->
                    <ImageButton
                        android:id="@+id/saveButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/glow_button_background"
                        android:src="@drawable/ic_check_48"
                        android:scaleType="centerInside"
                        android:contentDescription="Save"
                        android:elevation="8dp"
                        app:tint="@android:color/white" />

                    <!-- Use Button -->
                    <ImageButton
                        android:id="@+id/confirmButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/glow_button_background"
                        android:src="@drawable/ic_check_48"
                        android:scaleType="centerInside"
                        android:contentDescription="Use in calculator"
                        android:elevation="8dp"
                        app:tint="@android:color/white" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Bottom instruction text -->
    <TextView
        android:id="@+id/bottomInstructionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/ar_tracking_error_background"
        android:padding="12dp"
        android:text="Tap to add point to polygon"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

    <!-- Skip AR Button -->
    <TextView
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Skip AR &amp; Open Calculator"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="italic"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:visibility="visible"
        android:contentDescription="Skip AR and open calculator" />

    <!-- AR tracking error message -->
    <TextView
        android:id="@+id/tracking_message_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="64dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ar_tracking_error_background"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="#fff"
        android:visibility="gone"
        tools:text="@string/ar_core_tracking_error_no_plane_hit"
        tools:visibility="visible" />

</RelativeLayout>