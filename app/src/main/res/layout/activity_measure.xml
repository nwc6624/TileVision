<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#666">

    <!-- AR Scene View -->
    <FrameLayout
        android:id="@+id/arSceneViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"/>

    <!-- Overlay UI (Buttons, hints, etc.) -->
    <FrameLayout
        android:id="@+id/arOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingTop="40dp">

        <!-- Hand Motion View -->
        <de.westnordost.streetmeasure.HandMotionView
            android:id="@+id/handMotionView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"/>

        <!-- Instruction Popup -->
        <de.westnordost.streetmeasure.InstructionPopupView
            android:id="@+id/instructionPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="60dp"
            android:visibility="visible"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            android:contentDescription="Measurement instructions" />

        <!-- Arrow Instruction View -->
        <include
            android:id="@+id/arrowInstructionView"
            layout="@layout/view_arrow_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            android:contentDescription="Aim the white arrow where you want a corner, then tap to drop a point." />

        <!-- Top instruction label -->
        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/ar_tracking_error_background"
            android:padding="16dp"
            android:text="Tap each corner to outline the area"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            tools:visibility="visible" />

        <!-- Floating area bubble (positioned dynamically) -->
        <FrameLayout
            android:id="@+id/areaBubbleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            tools:visibility="visible">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/speech_bubble_bottom_center"
            android:padding="12dp">

            <TextView
                android:id="@+id/areaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area: -- sq ft"
                android:textColor="#2D5A4A"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Area: 12.5 sq ft" />

        </FrameLayout>

        </FrameLayout>

        <!-- Glass Bottom Panel -->
        <LinearLayout
            android:id="@+id/bottomControlsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"
            android:elevation="24dp"
            android:clickable="true"
            android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:clipToPadding="false"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="#AA111111"
            app:strokeColor="@color/border_soft"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Result Text -->
                <TextView
                    android:id="@+id/resultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="142.8 sq ft"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_teal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:baselineAligned="false"
                    android:layout_marginBottom="8dp"
                    android:weightSum="3">

                    <!-- Undo Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/undoButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:minWidth="0dp"
                        android:layout_marginEnd="4dp"
                        android:text="@string/action_undo"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:maxLines="1"
                        android:ellipsize="none"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:backgroundTint="#33FFFFFF"
                        app:strokeColor="#66FFFFFF"
                        app:strokeWidth="1dp"
                        app:cornerRadius="24dp"
                        app:icon="@android:drawable/ic_menu_revert"
                        app:iconTint="@color/accent_purple"
                        app:iconPadding="2dp"
                        app:iconSize="16dp"
                        app:iconGravity="textStart"
                        android:contentDescription="@string/cd_undo" />

                    <!-- Use Button (Primary) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/confirmButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:minWidth="0dp"
                        android:layout_marginHorizontal="4dp"
                        android:text="Use"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:ellipsize="none"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:backgroundTint="@color/accent_teal"
                        app:cornerRadius="24dp"
                        app:icon="@drawable/ic_arrow_forward"
                        app:iconTint="#000000"
                        app:iconPadding="2dp"
                        app:iconSize="16dp"
                        app:iconGravity="textStart"
                        android:contentDescription="Use this area in Tile Calculator" />

                    <!-- Save Button (Secondary) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:minWidth="0dp"
                        android:layout_marginStart="4dp"
                        android:text="Save"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:maxLines="1"
                        android:ellipsize="none"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        app:backgroundTint="#33FFFFFF"
                        app:strokeColor="#66FFFFFF"
                        app:strokeWidth="1dp"
                        app:cornerRadius="24dp"
                        app:icon="@android:drawable/checkbox_on_background"
                        app:iconTint="#FFFFFF"
                        app:iconPadding="2dp"
                        app:iconSize="16dp"
                        app:iconGravity="textStart"
                        android:contentDescription="@string/cd_save" />
                </LinearLayout>

                <!-- Skip AR Link -->
                <TextView
                    android:id="@+id/skipButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Skip AR &amp; Open Calculator"
                    android:textSize="14sp"
                    android:textColor="@color/accent_teal"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="0dp"
                    android:textStyle="normal" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Bottom instruction text -->
        <TextView
            android:id="@+id/bottomInstructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="120dp"
            android:background="@drawable/ar_tracking_error_background"
            android:padding="12dp"
            android:text="Tap to add point to polygon"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            tools:visibility="visible" />

        <!-- AR tracking error message -->
        <TextView
            android:id="@+id/tracking_message_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="64dp"
            android:background="@drawable/ar_tracking_error_background"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="#fff"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            tools:text="@string/ar_core_tracking_error_no_plane_hit"
            tools:visibility="visible" />

        <!-- Flashlight Toggle Button -->
        <ImageButton
            android:id="@+id/buttonFlashlight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_round_hud_button"
            android:src="@drawable/ic_flashlight_off"
            android:contentDescription="@string/cd_flash"
            android:tint="#FFFFFF"
            android:elevation="12dp"
            android:clickable="true"
            android:focusable="true"/>

    </FrameLayout>

</FrameLayout>