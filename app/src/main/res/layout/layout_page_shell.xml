<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pageShellRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_page_frame"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Animated electric tile grid background -->
    <de.westnordost.streetmeasure.GridBackgroundView
        android:id="@+id/gridBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <!-- Per-screen UI gets inflated into this slot -->
    <FrameLayout
        android:id="@+id/pageContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:padding="16dp" />

</FrameLayout>
