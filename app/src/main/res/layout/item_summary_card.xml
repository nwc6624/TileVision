<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/bg_surface_glass"
    app:strokeColor="@color/border_soft"
    app:strokeWidth="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top line: title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitchen Floor - Oct 26, 2025"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />

        <!-- Second line: area and tiles -->
        <TextView
            android:id="@+id/areaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="142.8 ft² • 79 tiles"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <!-- Third line: tile size -->
        <TextView
            android:id="@+id/tileText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12.0 × 24.0 in"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp" />

        <!-- Fourth line: timestamp -->
        <TextView
            android:id="@+id/timestampText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oct 26, 2025 3:45 PM"
            android:textSize="12sp"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
