<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with title and settings button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <!-- App Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TileVision AR"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:letterSpacing="0.02" />

                <!-- Subheader -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Measure. Visualize. Estimate."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Settings Button -->
            <ImageView
                android:id="@+id/settingsButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:src="@drawable/ic_settings_24"
                android:contentDescription="Settings"
                app:tint="@color/text_secondary" />

        </RelativeLayout>

        <!-- Measure Project Area Card -->
        <de.westnordost.streetmeasure.GlassCardView
            android:id="@+id/btnStartMeasurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:text="Measure Project Area" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†’"
                    android:textSize="20sp"
                    android:textColor="@color/accent_teal" />
            </LinearLayout>
        </de.westnordost.streetmeasure.GlassCardView>

        <!-- Measure Tile Sample Button -->
        <include
            android:id="@+id/buttonMeasureTileSample"
            layout="@layout/view_glass_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Open Tile Calculator Button -->
        <include
            android:id="@+id/openCalculatorButton"
            layout="@layout/view_glass_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- View Saved Projects Button -->
        <include
            android:id="@+id/buttonViewSavedProjects"
            layout="@layout/view_glass_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- View Saved Tile Samples Button -->
        <include
            android:id="@+id/buttonViewSavedTileSamples"
            layout="@layout/view_glass_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- View Saved Jobs Button -->
        <include
            android:id="@+id/buttonViewSavedJobs"
            layout="@layout/view_glass_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <!-- Recent Measurements Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Measurements"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/tv_text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Recent Measurements Container -->
        <LinearLayout
            android:id="@+id/recentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>
