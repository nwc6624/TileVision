<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/bg_surface_glass"
    app:strokeColor="@color/border_soft"
    app:strokeWidth="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top row: Title and timestamp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Project - Oct 24, 2024"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/timestampText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 24"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>

        <!-- Middle row: Area/Details -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area: 125.5 sq ft"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/accent_teal"
            android:layout_marginBottom="4dp" />

        <!-- Optional preview/thumbnail -->
        <de.westnordost.streetmeasure.PolygonPreviewView
            android:id="@+id/polygonPreview"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
