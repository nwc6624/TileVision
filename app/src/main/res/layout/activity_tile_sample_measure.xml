<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_background"
    android:fitsSystemWindows="true">

    <!-- AR Scene View Container -->
    <FrameLayout
        android:id="@+id/arSceneViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false" />

    <!-- Overlay UI (Buttons, hints, etc.) -->
    <FrameLayout
        android:id="@+id/arOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingTop="40dp">

        <!-- Top App Bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/tv_primary"
            android:elevation="4dp"
            app:title="Tile Sample"
            app:titleTextColor="@color/tv_primaryText"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:navigationIconTint="@color/tv_primaryText" />

    <!-- Bottom Panel (hidden until capture complete) -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="24dp"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@color/bg_surface_glass"
            app:strokeColor="@color/border_soft"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Result Text -->
                <TextView
                    android:id="@+id/textResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12.0 × 24.0 in"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_teal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <!-- Undo Button -->
                    <Button
                        android:id="@+id/undoButton"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/glow_button_undo"
                        android:text="↩"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:contentDescription="Undo last measurement step" />

                    <!-- Save Button -->
                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="Save"
                        android:textColor="@android:color/white"
                        android:background="@drawable/button_primary_background"
                        android:padding="12dp"
                        android:contentDescription="Save this tile measurement" />

                    <!-- Use Button -->
                    <Button
                        android:id="@+id/useButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="Use"
                        android:textColor="@color/text_primary"
                        android:background="@drawable/button_secondary_background"
                        android:padding="12dp"
                        android:contentDescription="Use this measurement in the tile calculator" />
                </LinearLayout>

                <!-- Skip AR Link -->
                <TextView
                    android:id="@+id/skipButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Skip AR &amp; Open Calculator"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textStyle="normal" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Instruction Popup -->
        <de.westnordost.streetmeasure.InstructionPopupView
            android:id="@+id/instructionPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="80dp"
            android:visibility="visible"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            android:contentDescription="Measurement instructions" />

        <!-- THE TRACE OVERLAY MUST BE LAST SO IT SITS ON TOP AND GETS TOUCH -->
        <de.westnordost.streetmeasure.TileTraceOverlayView
            android:id="@+id/traceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true" />

        <!-- Flashlight Toggle Button -->
        <ImageButton
            android:id="@+id/buttonFlashlight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_round_hud_button"
            android:src="@drawable/ic_flashlight_off"
            android:contentDescription="@string/cd_flash"
            android:tint="#FFFFFF"
            android:elevation="12dp"
            android:clickable="true"
            android:focusable="true"/>

    </FrameLayout>

</FrameLayout>